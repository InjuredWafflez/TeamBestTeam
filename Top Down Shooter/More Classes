# class that will inherit from pygame, sets up all the graphics
# including character and enemies
class Graphic(object):
    # sets the x position and y position
    # for spawning characters
    def __init__(self, xpos = 0, ypos = 0):
        self.xpos = xpos
        self.ypos = ypos

    # getters and setters to return a value on the x and y position
    @property
    def xpos(self):
        return self._xpos

    @xpos.setter
    def xpos(self, value):
        self.xpos = value

    @property
    def ypos(self):
        return self._ypos

    @ypos.setter
    def ypos(self, value):
        self.ypos = value
    

    def display():
        pass
        
    # deletes an object upon death or leaving the playable area (e.g. bullets)
    def delete():
        pass
        

# class that sets up all sprites on screen incluing character and enemies
# inherits from the Graphic superclass
class NPC(Graphic):

    # initalize the health, speed, and vector coordiantes for all characters
    def __init__(self, health, speed, x_vec, y_vec):
        self.health = health
        self.speed = speed
        self.x_vec = x_vec
        self.y_vec = y_vec
 
    @property
    def x_vec(self):
        return self._x_vec

    @x_vec.setter
    def x_vec(self, value):
        self.x_vec = value

    @property
    def y_vec(self):
        return self._y_vec

    @y_vec.setter
    def y_vec(self, value):
        self.y_vec = value

    # Determines how any of the sprites will be moving on the screen
    def move():
        pass
